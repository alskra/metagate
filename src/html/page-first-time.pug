include helpers/variables
include helpers/mixins

include ../blocks/page/page
include ../blocks/header/header
include ../blocks/footer/footer
include ../blocks/breadcrumb/breadcrumb
include ../blocks/nav-meta/nav-meta
include ../blocks/line-chart/line-chart

- $.title = `${pageList.firstTime.title} - ${$.package.description}`;

+page.--theme-dark
  +header.__header
  +e.__main
    +b.SECTION.section
      +e.HEADER.__header
        .container-fluid
          .row
            .col-9.mt-40.d-flex.align-items-start
              +b.H1.title.__title #[strong #Meta]Wallet
              +breadcrumb(['My Wallets', 'Transfer', 'History', 'Settings']).__breadcrumb.mt-30.ml-50
            .col-3.mt-10.d-flex.flex-column.align-items-end
              +logo.__logo.mb-30
              +b.NAV.menu-user.__menu-user.mw-100
                +e.A.__item--login
                  +isvg#user.__item-icon
                  | User Login
                +e.A.__item(href=js)
                  | Logout
                +e.__item-lang
                  +b.SELECT.select-sm
                    option EN
                    option RU
      .container-fluid
        +nav-meta.mb-70
      +line-chart({"width": "100%", "height": 210, "fill": "none", "stroke": "url(#line-chart)", "strokeWidth": 2})
      +b.SECTION.subsection--transparent
        .container-fluid
          +e.HEADER.__header.mb-25
            +e.H2.__title
              +isvg#wallet.__title-icon
              | My Wallets
          .row
            .col-3
              +b.A.btn--big.w-100(href=js)
                +e.__lbl Create #MHC wallet
                +isvg#plus.__icon
            .col-3
              +b.A.btn--big.w-100(href=js)
                +e.__lbl Import #MHC wallet
                +isvg#import.__icon
  +footer('inner').__footer